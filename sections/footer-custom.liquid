{{ './css/additional.scss.css' | asset_url | stylesheet_tag }}
<div data-section-id="{{ section.id }}" data-section-type="footer-section">
    <div class="main-section-container">
        <div class="main-footer">
            <div class="main-footer-left">
                <h1>LIQUOR LAB</h1>
                <p>Join our newsletter to stay up to date<br/> on our latest events and discounts</p>
                {% form 'customer', id: formId, novalidate: 'novalidate' %}
                    {%- if form.posted_successfully? -%}
                        <p class="form-message form-message--success" tabindex="-1" data-form-status>
                            {{ 'general.newsletter_form.confirmation' | t }}
                        </p>
                    {%- endif -%}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <div class="input-group {% if form.errors %} input-group--error{% endif %} main-footer-left-input-group">
                        <input type="email"
                               name="contact[email]"
                               id="{{ formId }}-email"
                               class="input-group__field newsletter__input{% if form.errors %} input--error{% endif %}"
                               value="{{ form.email }}"
                               placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                               aria-label="{{ 'general.newsletter_form.email_placeholder' | t }}"
                               aria-required="true"
                               required
                               autocorrect="off"
                               autocapitalize="off"
                                {% if form.errors %}
                                 aria-invalid="true"
                                 aria-describedby="{{ formId }}-email-error"
                                data-form-status
                                {% endif %}>
                        <span class="input-group__btn">
                            <button type="submit" class="btn newsletter__submit" name="commit" id="Subscribe">
                            </button>
                         </span>
                    </div>
                    {% if form.errors contains 'email' %}
                        <span id="{{ formId }}-email-error" class="input-error-message">
                        {% include 'icon-error' %} {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.
                      </span>
                    {% endif %}
                {% endform %}
            </div>
            <div class="main-footer-middle">
                <div class="main-footer-m-l">
                    <h2>Events</h2>
                    <h2>Private Events</h2>
                    <h2>Shop</h2>
                </div>
                <div class="main-footer-m-l">
                    <h2>Bartender's Corner</h2>
                    <h2>About</h2>
                    <h2>Locations</h2>
                </div>
            </div>
            <div class="main-footer-right">
                <a class="social-icons__link main-footer-right-social-parent" href="{{ settings.social_instagram_link | escape }}" aria-describedby="a11y-external-message">
                    {%- include 'icon-instagram' -%}
                    <span class="icon__fallback-text">Instagram</span>
                    <p>Instagram</p>
                </a>
                <a class="social-icons__link main-footer-right-social-parent" href="{{ settings.social_twitter_link | escape }}" aria-describedby="a11y-external-message">
                    {%- include 'icon-twitter' -%}
                    <span class="icon__fallback-text main-footer-right-social-parent">Twitter</span>
                    <p>Twitter</p>
                </a>
                <a class="social-icons__link main-footer-right-social-parent" href="{{ settings.social_facebook_link | escape }}" aria-describedby="a11y-external-message">
                    {%- include 'icon-facebook' -%}
                    <span class="icon__fallback-text">Facebook</span>
                    <p>Facebook</p>
                </a>
            </div>
        </div>
        <div class="main-footer-bottom">
            <p>© 2018 Liquor Laboratory. All rights reserved.</p>
            <div class="main-footer-bottom-right">
                <p>Privacy Policy</p>
                <p>Terms of Service</p>
            </div>
        </div>
    </div>
</div>

