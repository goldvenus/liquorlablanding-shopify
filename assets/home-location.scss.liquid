.location-home-header-parent {
  width: 1300px;
  margin:0 auto;
  display: flex;
  .header-left-image-div {
    display: block;
    width: 50%;
    img {
      width: 540px;
      height: 330px;
      object-fit: cover;
    }
    .header-second-image {
      margin-top: -165px;
      margin-left: 5vw;
    }
  }
  .header-right-title-div {
    width: 50%;
    justify-content: center;
    display: flex;
    flex-direction: column;
    padding-left: 20px;
    h2 {
    	opacity: 0.96;
    	color: #000000;
    	font-size: 56px;
    	font-weight: bold;
    	letter-spacing: -1px;
    	line-height: 60px;
    }
    p {
    	opacity: 0.96;
    	color: #000000;
    	font-size: 18px;
    	line-height: 28px;
      margin:0;
    }
  }
  .header-right-buttons {
    display: flex;
    margin-top:23px;
    .header-learn-button {
      display: flex;
      justify-content: center;
      align-items: center;
    	height: 48px;
      width: 150px;
    	color: #000000;
    	font-size: 16px;
    	letter-spacing: 0.1px;
    	line-height: 24px;
    	text-align: center;
      border: 1px solid black;
    }
    .header-classes-button {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-left:10px;
      height: 48px;
      width: 150px;
    	color: white;
      background: #0073BD;
    	font-size: 16px;
    	letter-spacing: 0.1px;
    	line-height: 24px;
    	text-align: center;
    }
  }
}
.location-home-testimonial-parent {
  display: flex;
  align-items: center;
  justify-content: center;
  .location-testimonial-item {
    padding:27px 10px;
    margin:0 10px;
    justify-content: space-around;
    display: flex;
    flex-direction: column;
    align-items: center;
  	height: 228px;
  	width: 301px;
    margin-top: 60px;
    margin-bottom:80px;
  	border: 1px solid rgba(0,0,0,0.25);
  	border-radius: 2.5px;
  	background-color: rgba(216,216,216,0);
    h3 {
    	color: #000000;
    	font-size: 17px;
    	letter-spacing: 0.15px;
    	line-height: 20px;
    	text-align: center;
    }
    img {
      height: 30px;
      width: 144px;
      object-fit: contain;
    }
  }
}
.location-home-social-div {
    display: flex;
    justify-content: space-between;
    width: 75%;
    margin:0 auto;
    .location-home-social-left {
      width: 47%;
      margin-bottom: 100px;
      h1 {
        width: 80%;
      	color: #000000;
      	font-size: 36px;
      	font-weight: bold;
      	letter-spacing: -0.64px;
      	line-height: 42px;
      }
      p {
      	color: #000000;
      	font-size: 18px;
      	line-height: 28px;
        margin-bottom: 30px;
      }
      .header-classes-button {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 48px;
        width: 150px;
      	color: white;
        background: #0073BD;
      	font-size: 16px;
      	letter-spacing: 0.1px;
      	line-height: 24px;
      	text-align: center;
      }
    }
    img {
        width: 47%;
        object-fit: cover;
    }
}
