.d-flex {
  display: flex;
}
.align-items-center {
  align-items: center;
}
.justify-content-center {
  justify-content: center;
}
.about-header-parent {
  width: 1440px;
  margin: 0 auto;
  @media (max-width: 780px) {
    width: 100%;
  }
  .about-header-container {
    width: 85%;
    margin-left: auto;
    @media (max-width: 780px) {
      width: 100%;
      margin:0 auto;
    }
  }
  h1 {
  	color: #000000;
  	font-size: 50px;
  	font-weight: bold;
  	letter-spacing: 3.5px;
  	line-height: 48px;
    @media (max-width: 780px) {
      width: 75%;
      margin: 0 auto;
      font-size: 45px;
      letter-spacing: 3.75px;
    }
  }
  h3 {
    color: #000000;
    font-size: 26px;
    font-weight: 300;
    line-height: 36px;
    width: 728px;
    margin:0;
    padding-bottom: 77px;
    @media (max-width: 780px) {
      width: 75%;
      margin: 0 auto;
      font-size: 18px;
      line-height: 28px;
      letter-spacing: 0.15px;
      text-shadow: 4px 2px #FFFFFF;
      font-weight: 700;
      padding-bottom: 40px;
    }
  }
  p {
    color: #000000;
	   font-size: 20px;
     font-weight: 300;
     line-height: 30px;
     width: 728px;
     @media (max-width: 780px) {
       width: 75%;
       margin:0 auto;
       font-size: 16px;
       letter-spacing: 0.2px;
       line-height: 21px;
       font-weight: 300;
       padding-bottom: 30px;
     }
  }
  .about-image-div {
    display: flex;
    justify-content: flex-end;
    img {
      width: 90%;
      height: 50vh;
      object-fit: cover;
      margin-bottom: 64px;
      @media (max-width: 780px) {
        width: 100%;
        height: 35vh;
        margin-bottom: 35px;
      }
    }
  }
}
.about-main-parent {
  width: 1440px;
  margin:0 auto;
  margin-top: 170px;
  margin-bottom: 55px;
  @media (max-width: 780px) {
    width: 100%;
    margin-top: 70px;
  }
  .about-main-container {
    width:85%;
    margin-left: auto;
    @media(max-width: 780px) {
      width: 75%;
      margin:0 auto;
    }
    h1 {
      color: #000000;
      font-size: 50px;
      font-weight: bold;
      letter-spacing: 3.5px;
      line-height: 57px;
      margin-bottom: 21px;
      @media (max-width: 780px) {
        font-size: 24px;
        font-weight: 800;
        width: 60%;
        letter-spacing: 2.5px;
        margin-bottom: 10px;
        line-height: 30px;
      }
    }
    h3 {
    	color: #000000;
    	font-size: 20px;
    	font-weight: 500;
    	line-height: 28px;
      margin:0;
      @media (max-width: 780px) {
        font-size: 16px;
        line-height: 28px;
        font-weight: 500;
      }
    }
    @media (max-width: 780px) {
      #select-category {
        width: 50%;
      }
    }
    .about-list-members {
      margin-bottom: 130px;
      display: flex;
      flex-wrap: wrap;
      @media (max-width: 780px) {
        display: block;
        width: 100%;
      }
      > div {
        width: 27%;
        margin-right: 6%;
        @media (max-width: 780px) {
          width: 100%;
        }
      }
      .about-member-item {
        .about-member-left-bar {
          box-sizing: border-box;
          height: 0.1px;
          width: 10%;
          border: 4px solid #C4892F;
          opacity: 0.7;
        }
        .about-member-container {
          height: 415px;
          box-shadow: 2px 2px 7px 2px rgba(0,0,0,0.1);
          padding:30px;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          margin-top: 136px;
          @media (max-width: 780px) {
            height: auto;
          }
          img {
            width: 273px;
            height: 273px;
            object-fit: cover;
            border-radius: 50%;
            margin-top:-136px;
            @media (max-width: 780px) {
              width: 216px;
              height: 216px;
            }
          }
          h2 {
          	color: #000000;
          	font-size: 24px;
          	font-weight: bold;
          	letter-spacing: -0.1px;
          	line-height: 32px;
            margin-bottom: 0;
            margin-top: 22px;
            width: 100%;
            @media (max-width: 780px) {
              font-size:22px;
              line-height: 32px;
              text-align: center;
              letter-spacing: -0.09px;
            }
          }
          h3 {
            	opacity: 0.7;
            	color: #000000;
            	font-size: 14px;
            	font-weight: bold;
            	letter-spacing: -0.07px;
            	line-height: 32px;
              margin:0;
              width: 100%;
              @media (max-width: 780px) {
                text-align: center;
              }
          }
          p {
            	opacity: 0.7;
            	color: #000000;
            	font-size: 14px;
            	font-weight: 300;
            	letter-spacing: -0.07px;
            	line-height: 25px;
              @media (max-width: 780px) {
                line-height: 20px;
                text-align: center;
              }
          }
        }
      }
    }
  }
}
