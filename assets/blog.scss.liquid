.mobile-display {
  @media(min-width: 780px) {
    display: none;
  }
}
.desktop-display {
  @media(max-width: 780px) {
    display: none;
  }
}
.blog-page-template {
  width: 1440px;
  margin: 0 auto;
  @media(max-width: 780px) {
    width: 100%;
  }
}
.blog-header-section-parent {
  width: 75%;
  margin:auto;
  @media(max-width: 780px) {
    width: 100%;
  }
  .blog-header-image-div {
  }
  h1 {
    	color: #000000;
    	font-size: 50px;
    	font-weight: bold;
    	letter-spacing: 3.5px;
    	line-height: 57px;
      padding-top:90px;
      margin-bottom:11px;
      @media (max-width: 780px) {
        color: #000000;
        font-size: 35px;
        font-weight: bold;
        letter-spacing: 1.6px;
        line-height: 49px;
        padding-top: 50px;
        margin-bottom: 20px;
        width: 75%;
        margin-left: auto;
        margin-right: auto;
      }
  }
  p {
    	color: #000000;
    	font-size: 24px;
    	font-weight: 300;
    	line-height: 36px;
      margin-bottom:67px;
      @media (max-width: 780px) {
      	opacity: 0.96;
      	color: #000000;
      	font-size: 17px;
      	font-weight: 300;
      	line-height: 20px;
      	text-shadow: 4px 2px 14px 0 #FFFFFF;
        width: 75%;
        margin:0 auto;
        margin-bottom: 20px;
      }
  }
  img {
    width: 100%;
    height: 527px;
    object-fit: cover;
    @media(max-width: 780px) {
      height: 70vh;
    }
  }
  h2 {
  	color: #FFFFFF;
  	font-size: 75px;
  	font-weight: bold;
  	letter-spacing: 6px;
  	line-height: 79px;
    position: absolute;
    width: 833px;
    padding-top: 100px;
    padding-left: 110px;
    @media(max-width: 780px) {
      position: relative;
      width: 75%;
      margin:0 auto;
      padding-top: 48px;
      padding-left: 0;
    	color: #000000;
    	font-size: 24px;
    	font-weight: bold;
    	letter-spacing: 2.5px;
    	line-height: 30px;
    	text-shadow: 0 2px 4px 0 rgba(0,0,0,0.1);
    }
  }
}
.blog-main-section-parent {
  width: 75%;
  margin:auto;
  flex-wrap: wrap;
  display: flex;
  justify-content: space-between;
  padding-bottom: 140px;
  @media(max-width: 780px) {
    width: 100%;
    padding-bottom: 40px;
  }
  .blog-item-div {
    width: 31.5%;
    margin-top: 60px;
    background-color: white;
    box-shadow: 2px 2px 7px 2px rgba(0,0,0,0.1);
    @media (max-width: 780px) {
      width: 100%;
      margin-top: 10px;
      margin-bottom:40px;
    }
    h2 {
        padding: 25px;
        padding-bottom: 10px;
      	color: #000000;
      	font-size: 22px;
      	font-weight: 800;
      	letter-spacing: -0.09px;
      	line-height: 30px;
        margin:0;
        @media (max-width: 780px) {
        	color: #000000;
        	font-size: 22px;
        	font-weight: 800;
        	letter-spacing: -0.09px;
        	line-height: 30px;
        }
    }
    p {
        padding-left: 25px;
        padding-bottom: 25px;
      	color: #1C28D1;
      	font-size: 16px;
      	font-weight: 500;
      	letter-spacing: 0.1px;
      	line-height: 24px;
    }
    img {
      height: 277px;
      width: 100%;
      object-fit: cover;
    }
  }
}
